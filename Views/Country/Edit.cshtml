@using GlobalCityManager.Extensiones 
@model GlobalCityManager.Models.Country

<html>
    <body>
        <h1>Modificar un País</h1>
        <form action="" method="POST" enctype="multipart/form-data">
            <table>
                @Html.HiddenFor(pais=>pais.Code)
                <tr>
                    <td><b>@Html.LabelFor(pais=>pais.Name)</b></td>
                    <td>@Html.TextBoxFor(pais=>pais.Name,
                        new {pattern="[A-Z].*", required="required", title="Un nombre siempre comienza con mayúscula"})</td>
                </tr>
                <tr>
                    <td><b>Región</b></td>
                    <td>
                        @Html.DropDownListFor(r=>r.Region, new SelectList(ListaModelos.obtenerListaRegiones(), "Nombre", "Nombre"))
                    </td>
                </tr>
                <tr>
                    <td><b>Bandera Nacional</b></td>
                    <td><input type="file" name="fichero" accept="image/*"/></td>
                </tr>
                <tr>
                    <td></td>
                    <td><input type="submit" value="Modificar" /></td>
                </tr>
            </table>
        </form>
    </body>
</html>
